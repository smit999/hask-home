---
// src/pages/index.astro
import BaseLayout from '../layouts/BaseLayout.astro';
const posts = await Astro.glob('./posts/*.md'); // Simple way to get posts
---
<BaseLayout title="Blog Home">
  <div class="text-center mb-8">
    <h2 class="text-3xl font-bold">Welcome to the Blog</h2>
    <p class="text-gray-600">Powered by Astro Erudite Theme</p>
  </div>
  <section>
    <h3 class="text-2xl font-semibold mb-4">Latest Posts</h3>
    <ul class="space-y-4">
      {posts.map(post => (
        <li class="bg-white p-4 rounded-lg shadow hover:shadow-md transition-shadow">
          <a href={post.url} class="text-xl font-semibold text-blue-600 hover:underline">{post.frontmatter.title}</a>
          <p class="text-sm text-gray-500">Published on: {new Date(post.frontmatter.publishDate).toLocaleDateString()}</p>
          <p class="mt-2 text-gray-700">Tags: {post.frontmatter.tags.join(', ')}</p>
        </li>
      ))}
    </ul>
    {posts.length === 0 && <p>No posts yet. Check back soon!</p>}
  </section>
</BaseLayout>
